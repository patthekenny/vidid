extends layout

// If there is a 'user' object, that means the user is authenticated.

block content
  .container
    h2 VIDID
    center
        div(id='top')
            if(creator)
                p Creator Name: #{ creator.name }
                p Creator ID: #{ creator._id }
                p Creator about: #{ creator.about }
                p Creator followers: #{ creator.followers }
                p Creator following: #{ creator.following }
            if(user)
                p User Name: #{ user.username } 
                p User ID: #{ user._id }
                a(href="/logout") Logout
                br
                br
                include widgets/upload_form
            if(!user)
                include widgets/login_form
    hr
    h4 Recent Videos
    div(id='recent_videos')
